@model UserProject.Models.Location
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><b>DELETE</b></h2>
<br />
<h4>Are you sure you want to delete this?</h4>
</br>
<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">


        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.LocationName)</b>: @Html.DisplayFor(model => model.LocationName)</li>
        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.LocationImage)</b>: @Html.DisplayFor(model => model.LocationImage)</li>

    </ul>
</div>
<br />

@using (Html.BeginForm("Delete", "Location", FormMethod.Post))
{
    <p>
        <input type="submit" value="Delete" , class="btn btn-danger" />
        <a asp-controller="Location" asp-action="Index" class="btn btn-primary">Back To List</a>
    </p>
}
