@model UserProject1.Models.UserDetails
@{
    Layout = null;
}

@using Microsoft.Extensions.Options
@inject IOptions<StripeSetting> Stripe


<style type="text/css">
    body {
        background-image: url(data:image/jpeg;base64,);
    }
</style>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">

            <img src="https://images.all-free-download.com/images/graphicthumb/cinema_movie_vector_background_graphics_589343.jpg" />
            <br />
            <br />
            <h2><b>YOUR BOOKINGS!</b></h2>
            <br />

        </div>
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3"></h4>

                <ul class="list-group mb-3">
                    @foreach (var item in ViewBag.bookmovie)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0"><b>Movie Name</b></h6>
                                @item.Movies.MovieName
                            </div>
                            <span class="text-muted">
                                <h6 class="my-0"><b> Quantity</b></h6>
                                @item.Quantity
                            </span>
                            <span class="text-muted">
                                <h6 class="my-0"><b>Movie Price</b></h6>
                                @item.Movies.MoviePrice
                            </span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (INR)</span>
                        <strong>@ViewBag.total</strong>
                    </li>
                </ul>

            </div>
            <div class="col-md-8 order-md-1">

                <form asp-action="Checkout" asp-controller="BookMovie" method="post">

                    <div class="form-group">
                        <label><b>Show Timings</b></label>
                        <select name="showTiming" class="form-control">
                            <option>12 Noon</option>
                            <option>3 PM</option>
                            <option>6 PM</option>
                        </select>
                    </div>


                    <div class="mb-3">
                        <label for="userName"><b>User Name</b></label>
                        <input type="text" asp-for="UserName" class="form-control" placeholder="Username" required>
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>



                    <div class="mb-3">
                        <label for="email"><b>Email</b></label>
                        <input type="email" asp-for="Email" class="form-control" id="Email" placeholder="Email" required>
                        <div class="invalid-feedback">
                            Please enter your email address
                        </div>

                    </div>

                    <div class="mb-3">
                        <label for="phonenumber"><b>Phone Number</b></label>
                        <input type="text" asp-for="ContactNo" class="form-control" id="phonenumber" placeholder="" required>
                        <div class="invalid-feedback">
                            Please enter your valid phone number
                        </div>
                    </div>

                    <hr class="mb-4">
                    <script src="//checkout.stripe.com/v2/checkout.js"
                            class="stripe-button"
                            data-key="@Stripe.Value.PublishableKey"
                            data-locale="auto"
                            data-description="Sample Charge"
                            data-amount=@ViewBag.total>
                    </script>
                    
                </form>

            </div>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>





