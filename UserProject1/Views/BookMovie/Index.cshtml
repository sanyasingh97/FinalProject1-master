@using Microsoft.AspNetCore.Http;
@model UserProject1.Models.Movies
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<br />
<br />
<br />
<h3><b>YOUR BOOKINGS!</b></h3>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<br />
<br />


<style type="text/css">
    body {
        background-image: url(data:image/jpeg;base64,);
    }
</style>

<table class=" table table-striped">
    <tr>
        <th>Options</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    @foreach (var item in ViewBag.bookmovie)
    {
        <tr>
            <td><a asp-controller="BookMovie" asp-action="remove" class="btn btn-primary" asp-route-id="@item.Movies.MovieId">Remove </a></td>
            <td>@item.Movies.MovieId</td>
            <td>@item.Movies.MovieName</td>
            <td><img src="@item.Movies.MovieImage" width="60" /></td>
            <td>@item.Movies.MoviePrice</td>
            <td> <a class="btn btn-default" asp-controller="BookMovie" asp-action="Minus" asp-route-id="@item.Movies.MovieId">-</a>@item.Quantity<a class="btn btn-default" asp-controller="BookMovie" asp-action="Plus" asp-route-id="@item.Movies.MovieId">+</a></td>

            <td>@(item.Movies.MoviePrice * item.Quantity)</td>

        </tr>
    }
    <tr>
        <td align="right" colspan="6"><b>Sum</b></td>
        <td>
            @ViewBag.total
        </td>
    </tr>
</table>

<hr />
<br>
<br>

<body>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-success" onclick="Warn();">Proceed</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back To Index</a>
</body>
</html>


