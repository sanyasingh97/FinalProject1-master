
@model IEnumerable<UserProject1.Models.Movies>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<section class="jumbotron text-center">
    <img src="~/images/image (1).png" />
    <style type="text/css">
        body {
            background-image: url(https://img.freepik.com/free-photo/white-plain-wall-surface-background_53876-74688.jpg?size=626&ext=jpg);
        }
    </style>
    <div class="container">
        <br />
        <h1 class="jumbotron-heading">Movie Tickets, Events & Cinemas near Delhi</h1>
    </div>
</section>
&nbsp;
&nbsp;
&nbsp;
&nbsp;
<br />
<br>


<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@item.MovieImage" class="bd-placeholder-img" width="100%" height="300" card-img-top" />

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text" style="font-weight:bold;">@item.MovieName</p>
                                &nbsp;
                                &nbsp;

                                <a asp-controller="Multiplex" asp-action="Index" asp-route-id="@item.MovieId" type="button" class="btn btn-secondary">Select Location</a>

                            </div>

                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
