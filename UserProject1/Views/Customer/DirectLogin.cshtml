@model UserProject1.Models.UserDetails
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<style type="text/css">
    body {
        background-image: url(https://img.freepik.com/free-vector/dark-wall-background_1390-191.jpg?size=338&ext=jpg);
    }
</style>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/css1/style.css">
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <div class="image-holder">
                <br />
                <br />
                <br />

                <img style="padding-left:15px;" src="https://tccl.libnet.info/images/events/tccl/Movie_night.jpg" alt="">
            </div>
            <form style="font-size:16px;" asp-action="DirectLogin" asp-controller="Customer" method="post" style="padding-bottom:15px;">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="color:red; font-weight: bold;"></div>
                <h3 style="color:black">Sign In</h3>

                <div class="form-group">
                    <label for="UserName" class="text-uppercase"></label>
                    <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username">
                    <span asp-validation-for="UserName" class="text-danger" style="color:red; font-weight: bold;"></span>
                </div>
                <div class="form-group">
                    <label for="Password" class="text-uppercase"></label>
                    <input id="login-password" type="password" class="form-control" name="password" value="" placeholder="password">
                    <span asp-validation-for="Password" class="text-danger" style="color:red; font-weight: bold;"></span>
                </div>

                <div class="form-group">
                    <br/>
                    <button class="form-control" type="submit" style="color:white; background-color:black;">Sign In</button>
                    Dont have an account?
                    <a asp-controller="BookMovie" asp-action="DirectRegister" style="color:black;">Sign Up</a>
                </div>

            </form>
        </div>
    </div>

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>